---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro'
import { Fold1, Fold2, Fold3, Fold4, Fold5 } from '../components/ui/landing'
import '../styles/home.tokens.css'
import '@fontsource-variable/geist'
---

<StarlightPage
  frontmatter={{
    title: 'Scalekit documentation',
    topic: 'dev-kit',
    tableOfContents: false,
  }}
  hasSidebar={false}
>
  <div class="homepage-content">
    <Fold1 />
    <Fold2 />
    <Fold3 />
    <Fold4 />
    <Fold5 />
  </div>
</StarlightPage>

<style is:global>
  /* Hide the first Starlight content panel only on the homepage */
  main > .content-panel:first-of-type {
    display: none !important;
  }

  /* Remove padding from content panels on the homepage */
  .content-panel {
    border: 0;
    padding: 0;
  }

  /* Override fonts to use Geist only on the homepage */
  .homepage-content {
    --sl-font-system:
      'Geist Variable', 'Inter Variable', ui-sans-serif, system-ui, Roboto, Arial, sans-serif;
    font-family: var(--sl-font-system);
  }

  /* Apply Geist font to homepage content elements */
  .homepage-content .fold-title,
  .homepage-content .fold-lead,
  .homepage-content .card-desc,
  .homepage-content .card-cta,
  .homepage-content p,
  .homepage-content h1,
  .homepage-content h2,
  .homepage-content h3,
  .homepage-content h4,
  .homepage-content h5,
  .homepage-content h6 {
    font-family:
      'Geist Variable', 'Inter Variable', ui-sans-serif, system-ui, Roboto, Arial, sans-serif;
  }

  /* Fold background styles */
  .fold {
    padding: 4rem 0;
    margin: 0;
  }

  .fold--light {
    background: var(--home-bg-plain);
  }

  .fold--muted {
    background: var(--home-bg-muted);
  }

  .fold--alternate {
    background: var(--home-bg-alternate);
  }

  /* Fold 2 specific styles */
  .fold-2 {
    display: flex;
    padding: 5rem 11.25rem;
    flex-direction: column;
    align-items: flex-start;
    gap: 2.25rem;
    align-self: stretch;
  }

  .fold-2-content {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    align-self: stretch;
  }

  /* Fold 2 header specific font styling */
  .fold-2-header .fold-title {
    font-feature-settings:
      'liga' off,
      'calt' off;
    line-height: 2.75rem;
    letter-spacing: -0.045rem;
    align-self: stretch;
  }

  .fold-2-header .fold-lead {
    width: 35rem;
    color: var(--sl-color-text-muted);
    font-family: Inter, ui-sans-serif, system-ui, Roboto, Arial, sans-serif;
    font-size: 1.125rem;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
  }

  /* Responsive styles for Fold 2 */
  @media (max-width: 1024px) {
    .fold-2 {
      padding: 3rem 2rem;
      gap: 1.5rem;
    }

    .fold-2-content {
      flex-direction: column;
      gap: 1rem;
    }

    .fold-2-header .fold-title {
      font-size: 1.875rem;
      line-height: 2.25rem;
      letter-spacing: -0.0375rem;
    }

    .fold-2-header .fold-lead {
      width: 100%;
      font-size: 1rem;
    }
  }

  @media (max-width: 768px) {
    .fold-2 {
      padding: 2rem 1rem;
    }

    .fold-2-header .fold-title {
      font-size: 1.5rem;
      line-height: 1.875rem;
      letter-spacing: -0.03rem;
    }

    .fold-2-header .fold-lead {
      font-size: 0.875rem;
      line-height: 140%;
    }
  }

  /* Break out of Starlight's centered container to span the viewport */
  .full-bleed {
    width: 100vw;
    margin-left: 50%;
    transform: translateX(-50%);
    position: relative;
    z-index: 1;
  }

  /* Keep inner content nicely centered with your own max width */
  .full-bleed .home-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Two-column layout inside each fold: text/cards left, image right */
  .fold-grid {
    display: grid;
    grid-template-columns: 1fr;
    align-items: center;
    gap: 2rem;
  }

  .fold-media img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    border: 1px solid var(--sl-color-border);
    background: var(--sl-color-bg);
  }

  @media (max-width: 1024px) {
    .fold-grid {
      grid-template-columns: 1fr;
    }
    .fold-media {
      order: -1;
    }
  }
</style>
