---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro'
import { Fold1, Fold2, Fold3, Fold4, Fold5 } from '../components/ui/landing'
import Footer from '@/components/templates/_footer.mdx'
import '../styles/home.tokens.css'
import '../styles/folds.css'
import '@fontsource-variable/geist'
---

<StarlightPage
  frontmatter={{
    title: 'Scalekit documentation',
    tableOfContents: false,
  }}
  hasSidebar={false}
>
  <div class="homepage-content">
    <Fold1 />
    <Fold2 />
    <Fold3 />
    <Fold4 />
    <Footer />
  </div>
</StarlightPage>

<style is:global>
  /* Hide the first Starlight content panel only on the homepage */
  main > .content-panel:first-of-type {
    display: none !important;
  }

  /* Remove padding from content panels on the homepage */
  .content-panel {
    border: 0;
    padding: 0;
  }

  /* Override fonts to use Geist only on the homepage */
  .homepage-content {
    --sl-font-system:
      'Geist Variable', 'Inter Variable', ui-sans-serif, system-ui, Roboto, Arial, sans-serif;
    font-family: var(--sl-font-system);
  }

  /* Apply Geist font to homepage content elements */
  .homepage-content .fold-title,
  .homepage-content .fold-lead,
  .homepage-content .card-desc,
  .homepage-content .card-cta,
  .homepage-content p,
  .homepage-content h1,
  .homepage-content h2,
  .homepage-content h3,
  .homepage-content h4,
  .homepage-content h5,
  .homepage-content h6 {
    font-family:
      'Geist Variable', 'Inter Variable', ui-sans-serif, system-ui, Roboto, Arial, sans-serif;
  }

  /* Smooth scrolling for anchor links */
  html {
    scroll-behavior: smooth;
  }

  /* Offset scroll for fixed header if present */
  section[id] {
    scroll-margin-top: 2rem;
  }
</style>
