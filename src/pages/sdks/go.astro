    padding-left: 1.5rem;
  }

  .release-content :global(li) {
    margin: 0.375rem 0;
  }

  .release-content :global(code) {
    background: var(--sl-color-bg-inline-code);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
