---
import FoldHeader from '../FoldHeader.astro'
import FoldCard from '../FoldCard.astro'
import CardGrid from '../CardGrid.astro'
import SharedStyles from './SharedStyles.astro'
/* Agent Connect */
---

<SharedStyles />

<section class="fold fold--alternate fold-2 full-bleed">
  <FoldHeader
    title="Agent Connect"
    description="Connect your agent with skills by integrating with 100+ applications and 1000+ tools -- securely, in minutes."
    titleSize="2.25rem"
    titleWeight="500"
    titleColor="var(--sl-color-text-heading)"
    className="fold-3-header"
  />
  <div>
    <CardGrid className="fold-card-grid">
      <FoldCard title="Quickstart" href="/fsa/quickstart">
        <p class="card-desc">Get started with guided steps to connect quickly.</p>
      </FoldCard>
      <FoldCard title="Playground" href="/dev-kit/">
        <p class="card-desc">
          Try tool calling in minutes to see the request and response parameters.
        </p>
      </FoldCard>
    </CardGrid>
  </div>
</section>
