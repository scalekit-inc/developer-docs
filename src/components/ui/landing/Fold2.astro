---
import FoldHeader from '../FoldHeader.astro'
import FoldCard from '../FoldCard.astro'
import CardGrid from '../CardGrid.astro'
import SharedStyles from './SharedStyles.astro'
import IconLucideZap from '~icons/lucide/zap'
import IconLucidePlayCircle from '~icons/lucide/play-circle'
---

<SharedStyles />

<section
  id="auth-for-ai"
  class="fold-section fold--background-alternate agent-connect-section fold-full-width"
>
  <div class="home-container">
    <div class="fold-container">
      <div>
        <FoldHeader
          title="AI auth stack"
          description="Secure your AI agents when they connect with external tools and applications. Handle permissions, authentication, and access control seamlessly."
          titleSize="2.25rem"
          titleWeight="500"
          titleColor="var(--sl-color-text-heading)"
          className="agent-connect-header"
        />
        <div>
          <CardGrid className="feature-cards-grid">
            <FoldCard
              title="Agent Actions"
              icon={IconLucideZap}
              href="https://docs.scalekit.com/connect/"
            >
              <p class="card-desc">
                For agent developers: Connect your agents with 100+ applications securely.
              </p>
            </FoldCard>
            <FoldCard
              title="MCP Auth"
              icon={IconLucidePlayCircle}
              href="https://docs.scalekit.com/dev-kit/mcp"
            >
              <p class="card-desc">
                For MCP developers: Secure authentication for Model Context Protocol integrations.
              </p>
            </FoldCard>
          </CardGrid>
        </div>
      </div>
    </div>
  </div>
</section>
