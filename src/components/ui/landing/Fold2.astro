---
import FoldHeader from '../FoldHeader.astro'
import CustomCard from '../CustomCard.astro'
import CardGrid from '../CardGrid.astro'
import SharedStyles from './SharedStyles.astro'
import IconLucideBoxes from '~icons/lucide/boxes'
import IconLucideBot from '~icons/lucide/bot'
import IconMcp from '~icons/codicon/mcp'
import agentActionsImg from '../../../assets/pages/fold2/fold1-left.png'
import mcpAuthImg from '../../../assets/pages/fold2/fold1-right.png'
---

<SharedStyles />

<section
  id="auth-for-ai"
  class="fold-section fold--background-alternate agent-connect-section fold-full-width"
>
  <div class="home-container">
    <div class="fold-container">
      <div>
        <FoldHeader
          title="For Agent and MCP developers"
          description="Everything AI teams need for production workflows — OAuth for MCP servers, agent authentication, token management and tool-calling infrastructure."
          titleSize="2.25rem"
          titleWeight="500"
          titleColor="var(--sl-color-text-heading)"
          className="agent-connect-header"
        />
        <div>
          <div class="feature-cards-grid">
            <CustomCard
              title="Agent Actions"
              icon={IconLucideBot}
              href="/agent-actions/quickstart"
              image={agentActionsImg.src}
              imageAlt="Agent Actions - Connect AI agents to third-party apps and services"
            >
              <p class="card-desc">
                The drop-in actions layer that lets agents act on behalf of users—securely, with
                consent, and at scale.
              </p>
              <div class="dk-card-cta">
                <a href="/agent-actions/quickstart" class="sl-link-button">Build agents →</a>
              </div>
            </CustomCard>
            <CustomCard
              title="MCP Auth"
              icon={IconMcp}
              href="/mcp/oauth/"
              image={mcpAuthImg.src}
              imageAlt="MCP Auth - Production-ready authentication for MCP servers"
            >
              <p class="card-desc">
                Production-ready auth for MCP servers—OAuth 2.1 with dynamic client registration
                (DCR)
              </p>
              <div class="dk-card-cta">
                <a href="/mcp/oauth/" class="sl-link-button">Secure MCP →</a>
              </div>
            </CustomCard>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
