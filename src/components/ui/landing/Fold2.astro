---
import FoldHeader from '../FoldHeader.astro'
import Card from '../Card.astro'
import SharedStyles from './SharedStyles.astro'
/* Agent Connect */
---

<SharedStyles />

<section class="fold fold--alternate fold-2 full-bleed">
  <FoldHeader
    title="Agent Connect"
    description="Connect your agent with skills by integrating with 100+ applications and 1000+ tools -- securely, in minutes."
    titleSize="2.25rem"
    titleWeight="500"
    titleColor="var(--sl-color-text-heading)"
    className="fold-2-header"
  />
  <div class="fold-2-content">
    <div class="fold-2-card-grid not-content">
      <Card title="Quickstart" href="/fsa/quickstart">
        <p class="card-desc">Get started with guided steps to connect quickly.</p>
      </Card>
      <Card title="Explore integrations" href="/sso/">
        <p class="card-desc">Check out the list providers and tools we support today.</p>
      </Card>
      <Card title="Playground" href="/dev-kit/">
        <p class="card-desc">
          Try tool calling in minutes to see the request and response parameters.
        </p>
      </Card>
    </div>
  </div>
</section>

<style>
  .fold-2-card-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.718rem;
    width: 100%;
    align-items: stretch;
    justify-items: stretch;
  }

  .fold-2-card-grid .card > * {
    flex-shrink: 0;
    width: 100%;
  }

  .fold-2-card-grid .card-desc {
    margin: 0 0 0.5rem !important;
    color: var(--sl-color-text-muted);
    flex: 1 !important;
    line-height: 1.4 !important;
  }

  a .card-cta {
    color: var(--sl-color-text-accent);
  }

  body
    > div
    > div
    > div
    > div
    > main
    > div:nth-child(2)
    > div
    > div
    > div
    > section.fold.fold--alternate.fold-2.full-bleed {
    margin-top: 0rem;
  }

  .fold-2-card-grid .card:hover {
    border-color: var(--sl-color-accent) !important;
    box-shadow: var(--sl-shadow-md) !important;
  }

  /* Override any Starlight card defaults */
  .fold-2-card-grid .card {
    width: 100% !important;
    margin: 0 !important;
    padding: 1.5rem 2rem !important;
    border-radius: 0.57438rem !important;
    border: 1.149px solid var(--sl-color-border) !important;
    background: var(--sl-color-bg-card) !important;
    box-shadow: var(--sl-shadow-sm) !important;
    height: 100% !important;
    display: flex !important;
    flex-direction: column !important;
    justify-content: space-between !important;
    align-items: flex-start !important;
    box-sizing: border-box !important;
    transition: all 0.2s ease !important;
    position: relative !important;
    top: 0 !important;
  }

  @media (max-width: 1024px) {
    .fold-2-card-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
      align-items: start;
    }
  }
</style>
