---
import FoldHeader from '../FoldHeader.astro'
import FoldCard from '../FoldCard.astro'
import CardGrid from '../CardGrid.astro'
import SharedStyles from './SharedStyles.astro'
import IconLucideBoxes from '~icons/lucide/boxes'
import IconLucideBot from '~icons/lucide/bot'
---

<SharedStyles />

<section
  id="auth-for-ai"
  class="fold-section fold--background-alternate agent-connect-section fold-full-width"
>
  <div class="home-container">
    <div class="fold-container">
      <div>
        <FoldHeader
          title="For Agent and MCP developers"
          description="Secure your AI agents when they connect with external tools and applications. Handle permissions, authentication, and access control seamlessly."
          titleSize="2.25rem"
          titleWeight="500"
          titleColor="var(--sl-color-text-heading)"
          className="agent-connect-header"
        />
        <div>
          <CardGrid className="feature-cards-grid">
            <FoldCard
              title="Agent Actions"
              icon={IconLucideBoxes}
              href="/agent-actions/"
              cta="Build agents →"
            >
              <p class="card-desc">
                Connect your Al agents to third-party apps and services safely
              </p>
            </FoldCard>
            <FoldCard title="MCP Auth" icon={IconLucideBot} href="/dev-kit/mcp" cta="Secure MCP →">
              <p class="card-desc">Protect your MCP servers with secure Auth 2.0 authentication</p>
            </FoldCard>
          </CardGrid>
        </div>
      </div>
    </div>
  </div>
</section>
