---
import FoldHeader from '../FoldHeader.astro'
import FoldCard from '../FoldCard.astro'
import CardGrid from '../CardGrid.astro'
import SharedStyles from './SharedStyles.astro'
import IconLucideZap from '~icons/lucide/zap'
import IconLucidePlayCircle from '~icons/lucide/play-circle'
/* Agent Connect */
---

<SharedStyles />

<section class="fold-section fold--background-alternate agent-connect-section fold-full-width">
  <FoldHeader
    title="Agent Connect"
    description="Connect your agent with skills by integrating with 100+ applications and 1000+ tools -- securely, in minutes."
    titleSize="2.25rem"
    titleWeight="500"
    titleColor="var(--sl-color-text-heading)"
    className="agent-connect-header"
  />
  <div>
    <CardGrid className="feature-cards-grid">
      <FoldCard
        title="Quickstart"
        icon={IconLucideZap}
        href="https://docs.scalekit.com/fsa/quickstart"
      >
        <p class="card-desc">Get started with guided steps to connect quickly.</p>
      </FoldCard>
      <FoldCard
        title="Playground"
        icon={IconLucidePlayCircle}
        href="https://docs.scalekit.com/dev-kit/"
      >
        <p class="card-desc">
          Try tool calling in minutes to see the request and response parameters.
        </p>
      </FoldCard>
    </CardGrid>
  </div>
</section>
