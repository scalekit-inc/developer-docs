---
import FoldHeader from '../FoldHeader.astro'
import CardGrid from '../CardGrid.astro'
import FoldCard from '../FoldCard.astro'
import SharedStyles from './SharedStyles.astro'
import IconMdiRobot from '~icons/mdi/robot'
import IconLucideShield from '~icons/lucide/shield'
import IconLucideUsers from '~icons/lucide/users'
import IconLucideKey from '~icons/lucide/key'
/* Plug n Play – Auth Modules */
---

<SharedStyles />

<section class="fold-section fold--background-muted auth-modules-section fold-full-width">
  <div class="home-container">
    <div class="fold-container">
      <div>
        <FoldHeader
          title="Plug n Play – Auth Modules"
          description="Drop‑in auth for any workflow — choose the modules you need and integrate in minutes."
          descriptionSize="1rem"
          titleSize="2.25rem"
          titleWeight="500"
          titleColor="var(--sl-color-text-heading)"
          className="auth-modules-header"
        />
        <CardGrid className="feature-cards-grid">
          <FoldCard
            title="MCP Auth"
            icon={IconMdiRobot}
            href="https://docs.scalekit.com/dev-kit/mcp"
          >
            <p class="card-desc">Integrate with customer IdPs for secure login experiences.</p>
          </FoldCard>
          <FoldCard
            title="Single Sign On"
            icon={IconLucideShield}
            href="https://docs.scalekit.com/sso/"
          >
            <p class="card-desc">Integrate with customer IdPs for secure login experiences.</p>
          </FoldCard>
          <FoldCard
            title="SCIM Provisioning"
            icon={IconLucideUsers}
            href="https://docs.scalekit.com/directory/scim/quickstart"
          >
            <p class="card-desc">Seamlessly sync customer directories with your app.</p>
          </FoldCard>
          <FoldCard
            title="Passwordless Authentication"
            icon={IconLucideKey}
            href="https://docs.scalekit.com/passwordless/"
          >
            <p class="card-desc">
              Let users authenticate instantly with magic links or biometrics.
            </p>
          </FoldCard>
        </CardGrid>
      </div>
    </div>
  </div>
</section>
