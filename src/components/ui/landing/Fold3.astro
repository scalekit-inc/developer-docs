---
import FoldHeader from '../FoldHeader.astro'
import CardGrid from '../CardGrid.astro'
import FoldCard from '../FoldCard.astro'
import SharedStyles from './SharedStyles.astro'
import IconLucideUsers from '~icons/lucide/users'
import IconLucideMail from '~icons/lucide/mail'
import IconLucideKeyRound from '~icons/lucide/key-round'
import IconLucideArrowLeftRight from '~icons/lucide/arrow-left-right'
import IconStreamlineUserSyncOnlineInPersonRemix from '~icons/streamline/user-sync-online-in-person-remix'

/* Plug n Play – Auth Modules */
---

<SharedStyles />

<section id="auth-for-humans" class="fold-section fold--background-muted fold-full-width">
  <div class="home-container">
    <div class="fold-container">
      <div>
        <FoldHeader
          title="For App developers"
          description="Explore our authentication solutions and see how they can transform your application security."
          descriptionSize="1rem"
          titleSize="2.25rem"
          titleWeight="500"
          titleColor="var(--sl-color-text-heading)"
          className="auth-modules-header"
        />
        <CardGrid className="feature-cards-grid">
          <FoldCard
            title="Full-Stack Auth"
            icon={IconLucideUsers}
            href="/fsa/quickstart"
            cta="Get started →"
          >
            <p class="card-desc">
              Add secure, flexible B2B authentication to your app and manage users, roles, and
              access
            </p>
          </FoldCard>
          <FoldCard
            title="Passwordless Authentication"
            icon={IconLucideMail}
            href="/passwordless/quickstart"
            cta="Try now →"
          >
            <p class="card-desc">
              Offer users a seamless passwordless login experience for your app with magic links and
              verification codes.
            </p>
          </FoldCard>
          <FoldCard
            title="Single Sign-on"
            icon={IconLucideKeyRound}
            href="/sso/quickstart"
            cta="Explore SSO →"
          >
            <p class="card-desc">
              Add SSO to your SaaS app in hours and make enterprise logins easy for your customers,
              with no extra setup.
            </p>
          </FoldCard>
          <FoldCard
            title="SCIM Provisioning"
            icon={IconStreamlineUserSyncOnlineInPersonRemix}
            href="/directory/scim/quickstart"
            cta="Quick setup →"
          >
            <p class="card-desc">
              Automate user provisioning and deprovisioning with a single API, keeping your app’s
              user access always up to date.
            </p>
          </FoldCard>
        </CardGrid>
      </div>
    </div>
  </div>
</section>
