---
import FoldHeader from '../FoldHeader.astro'
import SharedStyles from './SharedStyles.astro'
import heroImage from '@/assets/pages/hero/dark.png'
/* What is Scalekit? */
---

<SharedStyles />

<section class="fold fold--muted full-bleed fold1-container">
  <div class="home-container fold1-content">
    <div class="fold-grid fold1-grid">
      <div class="fold1-main">
        <FoldHeader
          title="What is Scalekit?"
          description="Scalekit is a platform for building and managing your agentic applications. It provides a set of tools and services that you can use to build your agentic applications."
          titleSize="4.75rem"
          titleWeight="500"
          titleColor="var(--home-text-fold1-title)"
          titleAlign="center"
          descriptionColor="var(--home-text-secondary)"
          className="fold1-header"
        />
        <div class="fold1-hero-image">
          <img src={heroImage.src} alt="Scalekit Hero" />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .fold1-container {
    /* Container dimensions from design spec */
    width: min(90rem, 100vw);
    height: 37.6875rem;
    flex-shrink: 0;
    /* Center the container */
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .fold1-content {
    /* Content area width from design spec */
    width: min(50.625rem, 90vw);
    max-width: 100%;
  }

  .fold1-grid {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .fold1-main {
    width: 100%;
  }

  .fold1-header .fold-lead {
    text-align: center;
    max-width: 100%;
    margin-top: 1rem;
  }

  .fold1-hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .fold1-hero-image img {
    width: 100vw; /* 50% of viewport width */
    max-width: 800px; /* But never wider than 800px */
    height: auto;
    border-radius: 12px;
    border: 1px solid var(--sl-color-border);
    box-shadow: 0 4px 20px var(--sl-color-shadow);
  }

  /* Ensure proper responsive behavior */
  @media (max-width: 90rem) {
    .fold1-container {
      width: 100%;
      height: auto;
      min-height: 37.6875rem;
    }
  }

  @media (max-width: 1024px) {
    .fold1-header .fold-title {
      font-size: 4rem !important;
    }
  }

  @media (max-width: 768px) {
    .fold1-header .fold-title {
      font-size: 3rem !important;
    }

    .fold1-content {
      width: min(45rem, 90vw);
    }
  }

  @media (max-width: 640px) {
    .fold1-header .fold-title {
      font-size: 2.5rem !important;
    }

    .fold1-container {
      height: auto;
      min-height: 25rem;
      padding: 3rem 0;
    }

    .fold1-content {
      width: min(35rem, 90vw);
    }

    .fold1-hero-image {
      margin-top: 1.5rem;
      margin-bottom: 0.5rem;
    }

    .fold1-hero-image img {
      width: 100%;
      max-width: 500px;
      border: 1px solid var(--sl-color-border);
      box-shadow: 0 4px 20px var(--sl-color-shadow);
    }
  }

  @media (max-width: 480px) {
    .fold1-header .fold-title {
      font-size: 2rem !important;
    }

    .fold1-content {
      width: min(28rem, 90vw);
    }

    .fold1-hero-image {
      margin-top: 1rem;
      margin-bottom: 0.25rem;
    }

    .fold1-hero-image img {
      width: 100%;
      max-width: 350px;
      border: 1px solid var(--sl-color-border);
      border-radius: 8px;
      box-shadow: 0 2px 12px var(--sl-color-shadow);
    }
  }
</style>
