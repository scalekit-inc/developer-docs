---
import FoldHeader from '../FoldHeader.astro'
import SharedStyles from './SharedStyles.astro'
// import heroImage from '@/assets/pages/hero/dark.png'
/* What is Scalekit? */
---

<SharedStyles />

<section class="fold-section fold--background-muted fold-full-width">
  <div class="home-container">
    <div class="fold-container hero-container">
      <div class="hero-content">
        <div class="hero-main">
          <FoldHeader
            title="Auth Infrastructure for AI Apps"
            description="Secure your AI agents and applications with enterprise-grade auth. From user login to agent permissions - we handle the complex security so you can focus on building great AI experiences."
            titleSize="4.75rem"
            titleWeight="500"
            titleColor="var(--home-text-fold1-title)"
            titleAlign="center"
            descriptionColor="var(--home-text-secondary)"
            descriptionSize="1.25rem"
            className="hero-header"
          />
        </div>
      </div>
    </div>
  </div>
</section>
