---
import FoldHeader from '../FoldHeader.astro'
import SharedStyles from './SharedStyles.astro'
import { LinkButton } from '@astrojs/starlight/components'
// import heroImage from '@/assets/pages/hero/dark.png'
/* What is Scalekit? */
---

<SharedStyles />

<section class="fold-section fold--background-muted fold-full-width">
  <div class="home-container">
    <div class="fold-container hero-container">
      <div class="hero-content">
        <div class="hero-main">
          <FoldHeader
            title="Auth Stack for AI Applications"
            description="Scalekit is the auth stack for AI applications. We handle authentication for both incoming and outgoing agent workflows: turnkey OAuth 2.1 for incoming agents hitting your MCP servers, and a tool-calling layer that enables outgoing agents to securely access external applications with proper user delegation. Deploy agent auth in minutes, not months."
            titleSize="4.75rem"
            titleWeight="500"
            titleColor="var(--home-text-fold1-title)"
            titleAlign="center"
            descriptionColor="var(--home-text-secondary)"
            descriptionSize="1.25rem"
            className="hero-header"
          />
          <div class="hero-cta-buttons">
            <LinkButton href="#auth-for-ai" variant="primary" class="sk-primary">
              Auth for AI Agents
            </LinkButton>
            <LinkButton href="#auth-for-humans" variant="secondary" class="sk-secondary">
              Auth for Humans
            </LinkButton>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .hero-cta-buttons {
      flex-direction: column;
      align-items: center;
      gap: 0.75rem;
    }
  }
</style>
