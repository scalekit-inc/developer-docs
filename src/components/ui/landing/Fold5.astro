---
import FoldHeader from '../FoldHeader.astro'
import CardGrid from '../CardGrid.astro'
import Card from '../Card.astro'
import SharedStyles from './SharedStyles.astro'
import IconLucideCode from '~icons/lucide/code'
import IconLucideBookOpen from '~icons/lucide/book-open'
import IconTablerWebhook from '~icons/tabler/webhook'
import IconLucideDownload from '~icons/lucide/download'
import IconLucidePackage from '~icons/lucide/package'
import IconLucideGitBranch from '~icons/lucide/git-branch'
---

<SharedStyles />

<section class="fold-section fold--background-muted dev-resources-section fold-full-width">
  <div class="home-container">
    <div class="fold-container">
      <div>
        <FoldHeader
          title="Dev Resources"
          description="Build faster with SDKs, reference docs, and ready‑to‑use tools."
          descriptionSize="1rem"
          titleSize="2.25rem"
          titleWeight="500"
          titleColor="var(--sl-color-text-heading)"
          className="fold-3-header"
        />
        <CardGrid>
          <Card
            title="SDKs"
            icon={IconLucideCode}
            href="https://docs.scalekit.com/sdks"
            cta="Get started →"
          >
            <p class="card-desc">Build faster with client and server SDKs.</p>
          </Card>
          <Card
            title="API reference"
            icon={IconLucideBookOpen}
            href="https://docs.scalekit.com/reference/"
            cta="Browse APIs →"
          >
            <p class="card-desc">
              Full, copy‑paste‑ready documentation for all endpoints and features.
            </p>
          </Card>
          <Card
            title="Webhooks"
            icon={IconTablerWebhook}
            href="https://docs.scalekit.com/reference/webhooks/"
            cta="View docs →"
          >
            <p class="card-desc">
              Trigger real‑time updates in your app when authentication events happen.
            </p>
          </Card>
          <Card
            title="Sample apps"
            icon={IconLucidePackage}
            href="https://docs.scalekit.com/dev-kit/resources/"
            cta="Try examples →"
          >
            <p class="card-desc">
              Prebuilt examples to see Scalekit in action, from login to provisioning.
            </p>
          </Card>
          <Card
            title="Postman collection"
            icon={IconLucideDownload}
            href="https://docs.scalekit.com/apis"
            cta="Try APIs →"
          >
            <p class="card-desc">
              Test and explore every Scalekit API with ready‑to‑use Postman requests.
            </p>
          </Card>
          <Card
            title="Changelog"
            icon={IconLucideGitBranch}
            href="/changelog"
            cta="View changelog →"
          >
            <p class="card-desc">
              Stay up to date with the latest features, improvements, and fixes.
            </p>
          </Card>
        </CardGrid>
      </div>
    </div>
  </div>
</section>
