---
import { Icon } from '@astrojs/starlight/components'

interface Props {
  iconName?: string
  icon?: any
}

const { iconName = 'approve-check', icon: IconComponent } = Astro.props
---

<div style="display: flex; align-items: center; margin-bottom: 4px; margin-top: 0.5rem;">
  {
    IconComponent ? (
      <IconComponent style="width: 1rem; height: 1rem; color: var(--sl-color-text-accent);" />
    ) : (
      <Icon name={iconName} color="var(--sl-color-text-accent)" />
    )
  }
  <span style="margin-left: 8px;"><slot /></span>
</div>

<style>
  .check-item {
    display: flex;
    align-items: left;
    margin-top: 0.5rem;
  }

  .check-item span {
    margin-left: 4px;
  }
</style>
