---
import { CardGrid as StarlightCardGrid } from '@astrojs/starlight/components'
---

<StarlightCardGrid>
  <slot />
</StarlightCardGrid>

<style>
  /* Custom styling for homepage cards */
  .card-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 1024px) {
    .card-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  .card-desc {
    margin: 0 0 0.5rem;
    color: var(--home-text-secondary);
  }

  .card-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-weight: 600;
    text-decoration: none;
    color: var(--sl-color-accent);
  }

  .card-cta:hover {
    text-decoration: underline;
  }
</style>
