---
import { CardGrid as StarlightCardGrid } from '@astrojs/starlight/components'

export interface Props {
  className?: string
}

const { className } = Astro.props
---

<StarlightCardGrid class:list={[className]}>
  <slot />
</StarlightCardGrid>

<style>
  /* Custom styling for homepage cards */
  .card-grid {
    display: grid !important;
    gap: 0.718rem !important;
    grid-template-columns: repeat(3, 1fr) !important;
  }

  /* Feature cards grid - 2 columns for the fold2 section */
  .feature-cards-grid {
    display: grid !important;
    gap: 1.5rem !important;
    grid-template-columns: repeat(2, minmax(0, 1fr)) !important;
    grid-auto-flow: row dense !important;
    align-items: stretch !important;
    justify-items: stretch !important;
  }

  /* Ensure children donâ€™t accidentally stick to a specific column */
  .feature-cards-grid > * {
    grid-column: auto / span 1 !important;
    width: 100% !important;
  }

  @media (max-width: 1024px) {
    .card-grid,
    .feature-cards-grid {
      grid-template-columns: 1fr !important;
      gap: 1rem !important;
    }
  }

  .card-desc {
    margin: 0 0 0.5rem;
    color: var(--home-text-secondary);
  }

  .card-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-weight: 600;
    text-decoration: none;
    color: var(--sl-color-accent);
  }

  .card-cta:hover {
    text-decoration: underline;
  }
</style>
