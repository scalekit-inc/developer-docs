---
import docsLogoLight from '@/assets/images/logos-v4/sk-docs-light.svg'
import docsLogoDark from '@/assets/images/logos-v4/sk-docs-dark.svg'
const year = new Date().getFullYear()
---

<footer class="fold-full-width sk-footer" aria-label="Site footer">
  <div class="top-divider" role="separator" aria-hidden="true"></div>
  <div class="home-container">
    <div class="footer-grid">
      <div class="brand-col">
        <a href="/" class="brand" aria-label="Scalekit Docs home">
          <img src={docsLogoLight.src} alt="Scalekit Docs" class="logo logo--light" />
          <img src={docsLogoDark.src} alt="" aria-hidden="true" class="logo logo--dark" />
        </a>
        <p class="tagline">Authentication for AI and enterprise apps.</p>
      </div>

      <nav class="nav-col" aria-labelledby="col-llms">
        <h3 id="col-llms" class="col-title">For LLMs</h3>
        <ul class="link-list">
          <li><a href="/llms.txt">llms.txt</a></li>
          <li><a href="/llms-full.txt">llms-full.txt</a></li>
        </ul>
      </nav>

      <nav class="nav-col" aria-labelledby="col-explore">
        <h3 id="col-explore" class="col-title">Products & resources</h3>
        <ul class="link-list">
          <li><a href="/fsa/quickstart/">Full stack auth</a></li>
          <li><a href="/sso/quickstart/">SSO</a></li>
          <li><a href="/directory/scim-quickstart/">Directory sync</a></li>
          <li><a href="/agent-actions/overview/">Agent actions</a></li>
          <li><a href="/apis/">APIs</a></li>
          <li>
            <a href="https://scalekit.statuspage.io/" target="_blank" rel="noopener noreferrer"
              >API status</a>
          </li>
          <li><a href="/support/contact-us/">Support</a></li>
        </ul>
      </nav>

      <nav class="nav-col" aria-labelledby="col-company">
        <h3 id="col-company" class="col-title">Company</h3>
        <ul class="link-list">
          <li>
            <a href="https://www.scalekit.com/pricing" target="_blank" rel="noopener noreferrer"
              >Pricing</a
            >
          </li>
          <li>
            <a
              href="https://www.scalekit.com/trust-center"
              target="_blank"
              rel="noopener noreferrer">Trust center</a
            >
          </li>
          <li>
            <a
              href="https://www.scalekit.com/privacy-policy"
              target="_blank"
              rel="noopener noreferrer">Privacy policy</a
            >
          </li>
          <li>
            <a
              href="https://www.scalekit.com/terms-of-service"
              target="_blank"
              rel="noopener noreferrer">Terms of service</a
            >
          </li>
          <li>
            <a href="https://www.scalekit.com/dpa" target="_blank" rel="noopener noreferrer">DPA</a>
          </li>
          <li>
            <a
              href="https://www.scalekit.com/cookie-policy"
              target="_blank"
              rel="noopener noreferrer">Cookie policy</a
            >
          </li>
        </ul>
      </nav>
    </div>

    <div class="footer-bottom">
      <p class="copyright">© {year} Scalekit</p>
      <div class="social">
        <a
          class="social-link"
          href="https://x.com/scalekit"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="X">X</a
        >
        <a
          class="social-link"
          href="https://www.linkedin.com/company/scalekit"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn">in</a
        >
        <a
          class="social-link"
          href="https://discord.gg/scalekit"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Discord">△</a
        >
        <a
          class="social-link"
          href="https://github.com/scalekit"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub">GH</a
        >
      </div>
    </div>
  </div>
</footer>

<style>
  @layer footer.layout, footer.components, footer.utilities, footer.responsive;

  @layer footer.layout {
    .sk-footer {
      margin-top: 2rem;
      padding: 3rem 0 2rem;
      color: var(--sl-color-text);
      font-size: 0.9375rem;
    }

    .footer-grid {
      display: grid;
      grid-template-columns: 1.5fr repeat(3, 1fr);
      gap: 2rem 3rem;
      align-items: start;
    }

    .brand-col .brand {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .brand-col .logo {
      height: 28px;
      width: auto;
      display: inline-block;
    }

    .tagline {
      margin-top: 0.75rem;
      color: var(--sl-color-text-muted);
      max-width: 24rem;
    }

    .col-title {
      margin: 0 0 0.75rem;
      font-size: 0.9375rem;
      font-weight: 600;
      color: var(--sl-color-text);
    }

    .link-list {
      list-style: none;
      padding: 0;
      margin: 0;
      display: grid;
      gap: 0.5rem;
    }

    .link-list a {
      color: var(--sl-color-text-muted);
      text-decoration: none;
    }

    .link-list a:hover {
      color: var(--sl-color-text);
      text-decoration: underline;
    }

    .footer-bottom {
      margin-top: 2.5rem;
      padding-top: 1rem;
      border-top: 1px solid var(--sl-color-border);
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1rem;
    }
  }

  @layer footer.components {
    .top-divider {
      width: 100%;
      height: 1px;
      background: var(--sl-color-gray-5);
      margin: 0 0 1.5rem 0;
    }

    .social {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .social-link {
      width: 28px;
      height: 28px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      border: 1px solid var(--sl-color-border);
      border-radius: 6px;
      font-size: 0.75rem;
      color: var(--sl-color-text-muted);
      text-decoration: none;
    }

    .social-link:hover {
      background: var(--sl-color-bg-soft);
      color: var(--sl-color-text);
      border-color: var(--sl-color-accent);
    }
  }

  @layer footer.utilities {
    .logo--dark {
      display: none;
    }
    :root[data-theme='dark'] .sk-footer .logo--light {
      display: none;
    }
    :root[data-theme='dark'] .sk-footer .logo--dark {
      display: inline-block;
    }
  }

  @layer footer.responsive {
    @media (max-width: 1024px) {
      .footer-grid {
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
      }
    }

    @media (max-width: 640px) {
      .footer-grid {
        grid-template-columns: 1fr;
      }

      .footer-bottom {
        flex-direction: column;
        align-items: flex-start;
      }
    }
  }
</style>
