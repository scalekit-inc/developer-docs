---
export interface Props {
  title: string
  description: string
  titleSize?: string
  titleWeight?: string
  titleColor?: string
  titleAlign?: string
  descriptionColor?: string
  descriptionSize?: string
  className?: string
}

const {
  title,
  description,
  titleSize = '1.5rem',
  titleWeight = '700',
  titleColor = 'var(--home-text-primary)',
  titleAlign = 'left',
  descriptionColor = 'var(--home-text-secondary)',
  descriptionSize = '1rem',
  className = '',
} = Astro.props
---

<header class={`fold-header ${className}`}>
  <h2
    class="fold-title"
    style={`font-size: ${titleSize}; font-weight: ${titleWeight}; color: ${titleColor}; text-align: ${titleAlign};`}
  >
    {title}
  </h2>
  <p class="fold-lead" style={`color: ${descriptionColor}; font-size: ${descriptionSize};`}>
    {description}
  </p>
</header>

<style>
  .fold-header {
    margin-bottom: 1.25rem;
  }
  .fold-title {
    margin: 0 0 0.25rem;
    font-family:
      'Geist Variable', 'Inter Variable', ui-sans-serif, system-ui, Roboto, Arial, sans-serif;
    line-height: 118%;
  }
  .fold-lead {
    margin: 0;
  }
</style>
