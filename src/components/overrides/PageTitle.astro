---
const { title, description } = Astro.locals.starlightRoute.entry.data
const PAGE_TITLE_ID = '_top'
---

<h1 id={PAGE_TITLE_ID}>{title}</h1>
{description && <p class="page-description">{description}</p>}

<style>
  h1 {
    margin-top: 1rem;
    margin-bottom: 0.5rem;
    font-size: var(--sl-text-h1);
    line-height: var(--sl-line-height-headings);
    font-weight: 600;
    color: var(--sl-color-white);
  }

  .page-description {
    margin: 0;
    margin-top: 0.75rem;
    color: var(--sl-color-gray-2);
    font-size: var(--sl-text-body-lg);
    line-height: 1.6;
    text-wrap: balance;
    max-width: 65ch;
    display: block;
    order: 2;
  }

  /* Ensure description appears below title even when contextual menu is present */
  :global(.contextual-menu-parent) {
    flex-direction: column !important;
    align-items: flex-start !important;
  }

  :global(.contextual-menu-parent .contextual-menu-container) {
    align-self: flex-end !important;
    margin-top: -2.5rem !important;
  }
</style>
