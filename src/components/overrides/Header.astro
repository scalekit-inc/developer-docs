---
import type { Props } from '@astrojs/starlight/props';
import { Icon } from '@astrojs/starlight/components';
import LanguageSelect from '@astrojs/starlight/components/LanguageSelect.astro';
import Search from '@astrojs/starlight/components/Search.astro';
import SiteTitle from '@astrojs/starlight/components/SiteTitle.astro';
import SocialIcons from '@astrojs/starlight/components/SocialIcons.astro';
import ThemeSelect from '@astrojs/starlight/components/ThemeSelect.astro';

const { dir, entry, lang, locale } = Astro.props;
---

<div class="header sl-flex">
  <div class="sl-flex">
    <SiteTitle {locale} />
  </div>
  <div class="search-bar-container">
    <Search {locale} />
  </div>
  <div class="sl-hidden md:sl-flex right-group">
    <nav class="sl-nav-links">
      <a href="/apis" class="sl-nav-link">API Reference</a>
      <a href="/dev-kit" class="sl-nav-link">SDKs</a>
      <a href="/integrations" class="sl-nav-link">Integrations</a>
    </nav>
    <div class="sl-flex social-icons">
      <SocialIcons />
    </div>
    <ThemeSelect />
    <LanguageSelect {locale} />
  </div>
  <!-- <div class="md:sl-hidden">
    <button
      aria-expanded="false"
      aria-haspopup="menu"
      aria-label="Menu"
      class="sl-flex md:sl-hidden"
      id="starlight__sidebar"
    >
      <Icon name="bars" />
    </button>
  </div> -->
</div>

<style>
  .header {
    gap: var(--sl-nav-gap);
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }

  .sl-nav-links {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-right: 1rem;
  }

  .sl-nav-link {
    color: var(--sl-color-gray-1);
    text-decoration: none;
    font-size: var(--sl-text-sm);
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    transition: background-color 0.2s, color 0.2s;
    white-space: nowrap;
  }

  .sl-nav-link:hover {
    background-color: var(--sl-color-gray-6);
    color: var(--sl-color-white);
  }

  @media (max-width: 50rem) {
    .sl-nav-links {
      display: none;
    }
  }

  .right-group,
  .social-icons {
    gap: 1rem;
    align-items: center;
  }

  .social-icons {
    gap: 0.5rem;
  }

  #starlight__sidebar {
    width: 2rem;
    height: 2rem;
    border: 0;
    border-radius: 0.25rem;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    background: var(--sl-color-accent-low);
    color: var(--sl-color-accent-high);
  }

  #starlight__sidebar:hover {
    background: var(--sl-color-accent);
    color: var(--sl-color-white);
  }

  .search-bar-container {
    flex: 1;
    display: flex;
    align-items: center;
    margin: 0 1rem;
    min-width: 0;
  }
</style>