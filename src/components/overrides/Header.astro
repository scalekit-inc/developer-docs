---
import type { Props } from '@astrojs/starlight/props'
import { Icon } from '@astrojs/starlight/components'

import Search from '@astrojs/starlight-docsearch/DocSearch.astro'
import SiteTitle from '@astrojs/starlight/components/SiteTitle.astro'
import SecondaryNav from '../SecondaryNav.astro'

import ThemeSelect from 'starlight-theme-nova/components/ThemeSelect.astro'
import { LinkButton } from '@astrojs/starlight/components'
import MobileMenuToggle from '@astrojs/starlight/components/MobileMenuToggle.astro'

const { dir, entry, lang, locale } = Astro.props
---

<div class="header">
  <div class="top-row">
    <div class="header-left">
      <SiteTitle {locale} />
    </div>

    <div class="header-center">
      <div class="search-wrapper">
        <Search {locale} />
        <MobileMenuToggle />
      </div>
    </div>

    <div class="header-right">
      <div class="right-actions sl-hidden md:sl-flex">
        <LinkButton
          href="https://schedule.scalekit.com/meet/ravi-madabhushi/demo-8b100203"
          target="_blank"
          variant="secondary"
          iconPlacement="start"
          class="sk-secondary"
        >
          Talk to an Engineer
        </LinkButton>
        <LinkButton
          href="https://app.scalekit.com/"
          target="_blank"
          variant="primary"
          icon="right-arrow"
          iconPlacement="end"
          class="sk-primary"
        >
          Start implementing
        </LinkButton>
        <!-- <div class="ml-4">
          <ThemeSelect />
        </div> -->
      </div>
    </div>
  </div>

  <SecondaryNav entry={entry} />
</div>

<style>
  /* Layer declarations */
  @layer header.layout, header.components, header.responsive;

  /* =============================================================================
     LAYOUT LAYER - Container and structural styles
     ============================================================================= */
  @layer header.layout {
    .header {
      position: sticky;
      top: 0;
      z-index: var(--sl-z-index-navbar);
      background-color: var(--sl-color-bg);
    }

    .top-row {
      display: flex;
      align-items: center;
      width: 100%;
    }

    .header-left {
      flex: 1;
      display: flex;
      justify-content: flex-start;
      align-items: center;
    }

    .header-center {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      max-width: 800px;
    }

    .header-right {
      flex: 1;
      display: flex;
      justify-content: flex-end;
      align-items: center;
    }
  }

  /* =============================================================================
     COMPONENTS LAYER - Individual component styles
     ============================================================================= */
  @layer header.components {
    .search-wrapper {
      flex: 0 1 300px;
      min-width: 250px;
    }

    .right-actions {
      display: none;
      gap: 1rem; /* Back to original spacing */
      align-items: center;
    }

    /* Custom padding for header LinkButtons only */
    .right-actions :global(.sk-primary) {
      padding: 0.3rem 1.5rem;
    }

    .right-actions :global(.sk-secondary),
    .right-actions :global(.sk-minimal) {
      padding: 0.5rem 1.5rem;
    }

    /* Match font size with other site buttons */
    .right-actions :global(.sk-primary),
    .right-actions :global(.sk-secondary) {
      font-size: var(--sl-text-sm); /* Match other site buttons (14.4px) */
    }
  }

  /* =============================================================================
     RESPONSIVE LAYER - Breakpoint-specific adaptations
     ============================================================================= */
  @layer header.responsive {
    /* Desktop: Show right actions at medium breakpoint and above */
    @media (min-width: 48rem) {
      .right-actions {
        display: flex;
      }
    }

    /* Large tablet adjustments */
    @media (max-width: 72rem) {
      .header-center {
        margin: 0 2rem;
      }

      .search-wrapper {
        flex: 0 1 250px;
        min-width: 200px;
      }
    }

    /* Small tablet adjustments */
    @media (max-width: 60rem) {
      .header-center {
        margin: 0 1rem;
      }

      .search-wrapper {
        flex: 0 1 200px;
        min-width: 180px;
      }
    }

    /* Mobile adjustments */
    @media (max-width: 48rem) {
      .header {
        position: sticky;
      }

      .top-row {
        height: auto;
        min-height: auto;
        gap: 0.5rem;
      }

      .header-left {
        flex: 0 0 auto;
        min-width: 0;
      }
    }
  }
</style>
