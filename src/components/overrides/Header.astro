---
import type { Props } from '@astrojs/starlight/props'
import { Icon } from '@astrojs/starlight/components'
import LanguageSelect from '@astrojs/starlight/components/LanguageSelect.astro'
import Search from '@astrojs/starlight/components/Search.astro'
import SiteTitle from '@astrojs/starlight/components/SiteTitle.astro'
import SocialIcons from '@astrojs/starlight/components/SocialIcons.astro'
import ThemeSelect from 'starlight-theme-nova/components/ThemeSelect.astro'
import { LinkButton } from '@astrojs/starlight/components'
import SecondaryNav from '../SecondaryNav.astro'

const { dir, entry, lang, locale } = Astro.props
---

<div class="header">
  <div class="top-row">
    <SiteTitle {locale} />

    <div class="center-content">
      <div class="search-wrapper">
        <Search {locale} />
      </div>
    </div>

    <div class="right-actions sl-hidden md:sl-flex">
      <LinkButton
        href="https://schedule.scalekit.com/meet/ravi-madabhushi/demo-8b100203"
        target="_blank"
        variant="secondary"
        icon="comment"
        iconPlacement="start"
        class="dashboard-btn"
      >
        Talk to an Engineer
      </LinkButton>
      <LinkButton
        href="https://app.scalekit.com/"
        target="_blank"
        variant="minimal"
        class="dashboard-btn"
      >
        Login
      </LinkButton>
      <LinkButton
        href="https://app.scalekit.com/ws/signup?src=docs"
        target="_blank"
        variant="primary"
        class="dashboard-btn"
      >
        Signup
      </LinkButton>
      <div class="ml-4">
        <ThemeSelect />
      </div>
    </div>
  </div>

  <!-- Secondary Navigation Bar -->
  <SecondaryNav />
</div>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: var(--sl-z-index-navbar);
    background-color: var(--sl-color-bg);
  }

  .top-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--sl-header-height-base);
    padding: 0 var(--sl-nav-pad-x);
  }

  .center-content {
    display: flex;
    align-items: center;
    gap: 4rem;
    flex: 1;
    max-width: 800px;
    margin: 0 3rem;
  }

  .search-wrapper {
    flex: 0 1 300px;
    min-width: 250px;
  }

  .nav-links {
    /* Hidden by default (mobile) — `md:sl-flex` utility will add flex display from the medium breakpoint,
       but we also reinforce it here to counteract this scoped style’s default specificity. */
    display: none;
    gap: 2rem;
    margin-left: auto;
  }

  /* Show nav links at the medium breakpoint (≈48 rem / 768 px) and above */
  @media (min-width: 48rem) {
    .nav-links {
      display: flex;
    }
  }

  .nav-link {
    font-size: var(--sl-text-sm);
    white-space: nowrap;
    color: var(--sl-color-gray-2);
  }

  .nav-link:hover {
    color: var(--sl-color-accent);
  }

  .right-actions {
    /* Hidden on mobile */
    display: none;
    align-items: center;
    font-weight: 500;
  }

  /* Show right actions at the medium breakpoint (≈48 rem / 768 px) and above */
  @media (min-width: 48rem) {
    .right-actions {
      display: flex;
    }
  }

  .dashboard-btn {
    padding: 0.4rem 1.2rem !important;
    white-space: nowrap;
  }

  .divider {
    width: 1px;
    height: 1.5rem;
    background-color: var(--sl-color-gray-4);
    opacity: 0.6;
  }

  @media (max-width: 72rem) {
    .center-content {
      gap: 3rem;
      margin: 0 2rem;
    }

    .nav-links {
      gap: 1.5rem;
    }

    .dashboard-btn {
      padding: 0.35rem 1rem !important;
      font-size: var(--sl-text-xs) !important;
    }
  }

  @media (max-width: 60rem) {
    .center-content {
      gap: 2rem;
      margin: 0 1rem;
    }

    .nav-links {
      gap: 1.2rem;
    }

    .search-wrapper {
      flex: 0 1 250px;
      min-width: 200px;
    }
  }
</style>
