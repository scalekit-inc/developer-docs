---
import type { Props } from '@astrojs/starlight/props'
import { Icon } from '@astrojs/starlight/components'

import Search from '@astrojs/starlight/components/Search.astro'
import SiteTitle from '@astrojs/starlight/components/SiteTitle.astro'

import ThemeSelect from 'starlight-theme-nova/components/ThemeSelect.astro'
import { LinkButton } from '@astrojs/starlight/components'
import SecondaryNav from '../SecondaryNav.astro'
import MobileMenuToggle from '@astrojs/starlight/components/MobileMenuToggle.astro'

const { dir, entry, lang, locale } = Astro.props
---

<div class="header">
  <div class="top-row">
    <SiteTitle {locale} />

    <div class="center-content">
      <div class="search-wrapper">
        <Search {locale} />
        <MobileMenuToggle />
      </div>
    </div>

    <div class="right-actions sl-hidden md:sl-flex">
      <LinkButton
        href="https://schedule.scalekit.com/meet/ravi-madabhushi/demo-8b100203"
        target="_blank"
        variant="secondary"
        iconPlacement="start"
        class="sk-secondary"
      >
        Talk to an Engineer
      </LinkButton>
      <LinkButton
        href="https://app.scalekit.com/"
        target="_blank"
        variant="minimal"
        class="sk-minimal"
      >
        Login
      </LinkButton>
      <LinkButton
        href="https://app.scalekit.com/ws/signup?src=docs"
        target="_blank"
        variant="primary"
        class="sk-primary"
      >
        Signup
      </LinkButton>
      <div class="ml-4">
        <ThemeSelect />
      </div>
    </div>
  </div>

  <SecondaryNav />
</div>

<style>
  /* Layer declarations */
  @layer header.layout, header.components, header.responsive;

  /* =============================================================================
     LAYOUT LAYER - Container and structural styles
     ============================================================================= */
  @layer header.layout {
    .header {
      position: sticky;
      top: 0;
      z-index: var(--sl-z-index-navbar);
      background-color: var(--sl-color-bg);
    }

    .top-row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: var(--sl-header-height-base);
    }

    .center-content {
      display: flex;
      align-items: center;
      gap: 4rem;
      flex: 1;
      max-width: 800px;
    }
  }

  /* =============================================================================
     COMPONENTS LAYER - Individual component styles
     ============================================================================= */
  @layer header.components {
    .search-wrapper {
      flex: 0 1 300px;
      min-width: 250px;
    }

    .right-actions {
      display: none;
      gap: 0.5rem;
      align-items: center;
      font-weight: 500;
    }

    /* Custom padding for header LinkButtons only */
    .right-actions :global(.sk-primary),
    .right-actions :global(.sk-secondary),
    .right-actions :global(.sk-minimal) {
      padding: 0.5rem 1.5rem;
    }
  }

  /* =============================================================================
     RESPONSIVE LAYER - Breakpoint-specific adaptations
     ============================================================================= */
  @layer header.responsive {
    /* Desktop: Show right actions at medium breakpoint and above */
    @media (min-width: 48rem) {
      .right-actions {
        display: flex;
      }
    }

    /* Large tablet adjustments */
    @media (max-width: 72rem) {
      .center-content {
        gap: 3rem;
        margin: 0 2rem;
      }
    }

    /* Small tablet adjustments */
    @media (max-width: 60rem) {
      .center-content {
        gap: 2rem;
        margin: 0 1rem;
      }

      .search-wrapper {
        flex: 0 1 250px;
        min-width: 200px;
      }
    }

    /* Mobile adjustments */
    @media (max-width: 47.9375rem) {
      .top-row {
        height: auto;
        min-height: auto;
      }
    }
  }
</style>
