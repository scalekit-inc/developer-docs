---
// Example component demonstrating third-party icon usage
// Import icons using the ~icons/{collection}/{name} pattern
import IconPhSparkle from '~icons/ph/sparkle'
import IconLucideZap from '~icons/lucide/zap'
import IconHeroiconsRocketLaunch from '~icons/heroicons/rocket-launch'
import IconTablerShield from '~icons/tabler/shield'
import IconFeatherSettings from '~icons/feather/settings'
import IconMdiAccount from '~icons/mdi/account'
---

<div class="icon-examples">
  <h3>Third-Party Icon Examples</h3>

  <div class="icon-grid">
    <!-- Phosphor Icons -->
    <div class="icon-item">
      <IconPhSparkle class="icon" color="var(--sl-color-accent)" />
      <span>Phosphor: Sparkle</span>
    </div>

    <!-- Lucide Icons -->
    <div class="icon-item">
      <IconLucideZap class="icon" color="#f59e0b" />
      <span>Lucide: Zap</span>
    </div>

    <!-- Heroicons -->
    <div class="icon-item">
      <IconHeroiconsRocketLaunch class="icon" color="#3b82f6" />
      <span>Heroicons: Rocket Launch</span>
    </div>

    <!-- Tabler Icons -->
    <div class="icon-item">
      <IconTablerShield class="icon" color="#10b981" />
      <span>Tabler: Shield</span>
    </div>

    <!-- Feather Icons -->
    <div class="icon-item">
      <IconFeatherSettings class="icon" color="#6366f1" />
      <span>Feather: Settings</span>
    </div>

    <!-- Material Design Icons -->
    <div class="icon-item">
      <IconMdiAccount class="icon" color="#f43f5e" />
      <span>MDI: Account</span>
    </div>
  </div>
</div>

<style>
  .icon-examples {
    margin: 2rem 0;
    padding: 1rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
  }

  .icon-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
  }

  .icon-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
    border: 1px solid var(--sl-color-gray-6);
    border-radius: 0.375rem;
    text-align: center;
  }

  :global(.icon) {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .icon-item span {
    font-size: 0.875rem;
    color: var(--sl-color-text-muted);
  }
</style>
