#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ”§ Running Prettier on changed files..."

# Get list of staged files that match prettier patterns
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(md|mdx)$' | tr '\n' ' ')

if [ -n "$STAGED_FILES" ]; then
  echo "ğŸ“ Formatting files: $STAGED_FILES"
  npx prettier --write $STAGED_FILES

  # Re-stage the formatted files
  git add $STAGED_FILES
  echo "âœ… Prettier formatting completed and files re-staged"
else
  echo "â„¹ï¸  No markdown files to format"
fi